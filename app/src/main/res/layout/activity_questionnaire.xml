<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionnaire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.lalax.citizenone.controllers.QuestionnaireActivity">

    <Button
        android:text=" Option A Button "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aOptionButton"
        android:background="#ffcdd2"
        android:textColor="#ff000000"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView" />

    <Button
        android:text=" Option B Button "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bOptionButton"
        android:textColor="#ff000000"
        android:background="#ffcdd2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/aOptionButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionTextView"
        android:textSize="18sp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/black" />

    <Button
        android:text=" Option C Button "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cOptionButton"
        app:layout_constraintTop_toBottomOf="@+id/bOptionButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#ffcdd2"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="19dp"
        android:id="@+id/scoreTextView"
        tools:layout_editor_absoluteX="294dp"
        android:textColor="@android:color/black" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        tools:layout_editor_absoluteY="7dp"
        android:id="@+id/progressBar"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:text=" Option D Button "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dOptionButton"
        app:layout_constraintTop_toBottomOf="@+id/cOptionButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#ffcdd2"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Next Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextQuestionButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.93" />


</android.support.constraint.ConstraintLayout>
